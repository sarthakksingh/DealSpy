<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Main app theme -->
    <style name="Theme.DealSpy" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <!-- No splash theme - completely removes default splash -->
    <style name="Theme.DealSpy.NoSplash" parent="android:Theme.Material.NoActionBar">
        <item name="android:windowBackground">#FF000000</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- Remove all splash screen elements -->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Fullscreen -->
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
