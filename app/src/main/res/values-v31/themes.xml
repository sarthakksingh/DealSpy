<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.DealSpy.NoSplash" parent="Theme.SplashScreen">
        <!-- Black background -->
        <item name="windowSplashScreenBackground">#FF000000</item>
        <!-- Black icon (invisible on black background) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/transparent_icon</item>
        <!-- Instant dismissal -->
        <item name="windowSplashScreenAnimationDuration">1</item>
        <!-- Switch to main theme -->
        <item name="postSplashScreenTheme">@style/Theme.DealSpy</item>
    </style>
</resources>
